<p id="notice"></p>
 <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      <th colospan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
    <span><%= book.title %></span>
    <span><%= book.body %></span>
    <% end %>
    </tbody>
 </table>
 <h2>New book</h2>
 <!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
