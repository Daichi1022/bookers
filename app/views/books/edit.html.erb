<h1>Editing Book</h1>

 <%= form_with model: @book, url: update_book_path(.id:@book), do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

  <% = link_to "Show",books_path,class "show_#{@book.id}" %>
  <% = link_to "Back", books_path,class: "back" %>

<% end %>
